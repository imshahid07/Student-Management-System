# ----------------------
# Angular Git Ignore
# ----------------------

# Compiled output
/dist/
/tmp/
/out-tsc/
/bazel-out/

# Node.js dependencies
/node_modules/

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Angular build cache
/.angular/cache/

# Coverage reports
/coverage/

# TypeScript compiled files
*.js
*.js.map

# IDEs and editors
.idea/
.project
.classpath
.c9/
*.launch
.settings/
*.sublime-workspace
*.sublime-project

# VS Code
.vscode/*
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# Local history / backups
.history/
*.bak
*.tmp

# Environment files (may contain secrets)
src/environments/environment*.ts

# Sass cache
.sass-cache/

# Misc
/connect.lock
/libpeerconnection.log
testem.log
/typings

# System files
.DS_Store
Thumbs.db
ehthumbs.db
Icon?
Desktop.ini

# Optional: lock files
/package-lock.json
/yarn.lock
/pnpm-lock.yaml

# Optional: Mac OS specific
.AppleDouble
.LSOverride
